<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgn"
    android:foregroundTint="#980E0E">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_90sdp"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/_10sdp"
            android:text="REGISTRATION  DETAILS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp"></Space>
            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textviewbg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.00dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                    android:paddingTop="5dp"
                    android:text="Profession:"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/professionspinner"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp"></Space>

            <TextView
                android:id="@+id/dateofbirth"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#fff"


                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"

                android:ems="20"
                android:foregroundTint="#AA1616"
                android:text="Date Of Birth:"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:shadowColor="#FBFBFB"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="#FAF3F3"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textviewbg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.00dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                    android:paddingTop="5dp"
                    android:text="Blood Donor:"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/bloodspinners"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp"></Space>
            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textviewbg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.00dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                    android:paddingTop="5dp"
                    android:text="Platelets Donor:"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/plateletsspinners"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp"></Space>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textviewbg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.00dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                    android:paddingTop="5dp"
                    android:text="Do you smoke or drink?:"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/smokerspineer"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp"></Space>


            <TextView
                android:id="@+id/lastblodddonatedate"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#fff"


                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"

                android:ems="20"
                android:foregroundTint="#AA1616"
                android:text="Last blood donated:"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:shadowColor="#FBFBFB"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="#FAF3F3"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="3dp"></Space>


            <Button
                android:id="@+id/next2"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginBottom="72dp"
                android:background="@drawable/inpuut_bg"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:backgroundTint="@color/design_default_color_error"

                />

</LinearLayout>
    </LinearLayout>
</RelativeLayout>